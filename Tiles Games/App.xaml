<Application
    x:Class="Tiles_Games.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    RequestedTheme="Light">
    
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
            </ResourceDictionary.MergedDictionaries>
            
            <Color x:Key="ColorFuente">#f7fcff</Color>
            <Color x:Key="ColorPrimario">#171a21</Color>

            <Color x:Key="ColorTrialFuente">#00376c</Color>
            <Color x:Key="ColorTrialFondo">#80c0ff</Color>
            <Color x:Key="ColorTrialBoton">#001932</Color>
        </ResourceDictionary>
    </Application.Resources>
</Application>
